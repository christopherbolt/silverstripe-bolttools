{
    "name": "christopherbolt/silverstripe-bolttools",
    "type": "silverstripe-vendormodule",
    "description": "Includes common tools and configuration used in ChristopherBolt.Com silverstripe sites.",
    "homepage": "http://github.com/christopherbolt/silverstripe-bolttools",
    "authors": [
        {
            "name": "Chris Bolt",
            "email": "chris@christopherbolt.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "silverstripe/cms": "^4.0",
    	"silverstripe/framework": "^4.0",
		"symbiote/silverstripe-gridfieldextensions": "^3",
    	"wilr/silverstripe-googlesitemaps": "^2",
    	"jonom/focuspoint": "^4",
    	"sheadawson/silverstripe-linkable": "^2",
		"christopherbolt/silverstripe-publishwithme": "^2",
		"christopherbolt/silverstripe-retinacontentimages": "dev-master",
		"colymba/gridfield-bulk-editing-tools": "^3",
        "bummzack/sortablefile": "^2",
		"undefinedoffset/silverstripe-nocaptcha": "^2",
        "silverware/calendar": "^1"
    },
	"extra": {
        "installer-name": "bolttools",
		"branch-alias": {
            "dev-master": "3.0.x-dev"
        },
		"expose": [
            "client"
        ]
    },
	 "autoload": {
        "psr-4": {
            "ChristopherBolt\\BoltTools\\": "src/"
        },
		"exclude-from-classmap": [
			"/src/nowidgets/",
			"/install/"
		]
    },
	"suggest": {
        "dnadesign/silverstripe-elemental": "For building modular pages"
    }
}