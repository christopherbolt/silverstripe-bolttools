{
    "name": "christopherbolt/silverstripe-bolttools",
    "type": "silverstripe-module",
    "description": "Includes common tools and configuration used in ChristopherBolt.Com silverstripe sites.",
    "homepage": "http://github.com/christopherbolt/bolttools",
    "authors": [
        {
            "name": "Chris Bolt",
            "email": "chris@christopherbolt.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "silverstripe/cms": "^4.0",
    	"silverstripe/framework": "^4.0",
		"symbiote/silverstripe-gridfieldextensions": "^3",
    	"wilr/silverstripe-googlesitemaps": "1.8.*",
    	"unclecheese/betterbuttons": "^3",
    	"jonom/focuspoint": "^3",
    	"sheadawson/silverstripe-linkable": "^2",
    	//"bummzack/sortablefile" : "1.2.*", // Not yet availabe for SS4
		//"christopherbolt/silverstripe-publishwithme": "^2", // Use $owns now instead?? built into SilverStripe??
		"christopherbolt/silverstripe-contentmodules": "^2",
		"colymba/gridfield-bulk-editing-tools": "^3"
    },
	"extra": {
        "installer-name": "bolttools",
		"branch-alias": {
            "dev-master": "2.0.x-dev"
        },
		"expose": [
            "client/css",
			"client/javascript",
            "client/thirdparty"
        ]
    },
	 "autoload": {
        "psr-4": {
            "ChristopherBolt\\BoltTools\\": "src/"
        },
		"exclude-from-classmap": ["/src/nowidgets/"]
    },
}